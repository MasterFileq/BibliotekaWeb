@model Microsoft.AspNetCore.Identity.IdentityUser

@{
    <br>
    ViewData["Title"] = "Szczegóły Czytelnika";
}

<h1>Szczegóły Czytelnika</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Adres Email:
        </dt>
        <dd class="col-sm-10">
            @Model.Email
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edytuj</a>
    <a asp-action="Index" class="btn btn-secondary">Powrót do listy</a>
</div>